<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.dashboard.AboutAppFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_logo"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/_50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appname"
        android:text="My Salon"
        android:textSize="@dimen/_25sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/version"
        android:text="Version: 1.0.0"
        android:gravity="center"
        android:padding="@dimen/_10dp"

        app:layout_constraintTop_toBottomOf="@id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/author"
        android:text="Designed &amp; Developed BY"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/emoji"
        android:src="@drawable/emoji"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/jihee"
        android:text="Jihee Son"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number"
        android:text="Contact Number"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/jihee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mobile"
        android:text="+1 332 288 8766"
        android:textStyle="italic"
        android:textColor="@color/main_sky_blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/email"
        android:text="Email"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address"
        android:text="jihee.son914@gmail.com"
        android:textColor="@color/main_sky_blue"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>